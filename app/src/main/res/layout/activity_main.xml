<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="io.edgarcode.sort.MainActivity">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="常见排序" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:id="@+id/layout_sort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btn_bubble"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="冒泡排序"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btn_choose"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="选择排序"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btn_insert"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="直接插入排序"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btn_quick"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="快速排序"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btn_merge"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="归并排序"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btn_heap"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="堆排序"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btn_shell"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="希尔排序"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btn_radix"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="归并排序"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btn_binarytree"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="二叉树排序"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btn_counting"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:text="计数排序"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
